    echo "Expected format: <type>(<scope>): <description>"
    echo ""
    echo "Valid types:"
    echo "  feat:     æ–°åŠŸèƒ½"
    echo "  fix:      ä¿®å¤bug"
    echo "  docs:     æ–‡æ¡£æ›´æ–°"
